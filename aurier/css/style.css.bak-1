*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  outline: 0;
}

html {
  scroll-behavior: smooth;
}

body {
  color: #7e7e7e;
  font-family: Lato, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  color: #061616;
  font-family: Raleway, sans-serif;
  line-height: 1.25em;
  letter-spacing: 0.55px;
}

p {
  line-height: 1.618em;
  letter-spacing: .67px;
}

p + p {
  margin-top: 1.8125rem;
}

a {
  color: inherit;
  text-decoration: none;
  letter-spacing: .67px;
}

a:hover,
a:active {
  opacity: .75;
}

.mt-3 {
  margin-top: 1.875rem;
}

.container {
  width: 1170px;
  margin: 0 auto;
  padding-right: 15px;
  padding-left: 15px;
}

.section {
  padding: 6.25rem 0;
}

.section__title {
  font-size: 2rem;
  margin-bottom: 1.25rem;
  text-align: center;
}

.landing-page section:nth-of-type(n + 2) {
  padding-top: 0;
}

.go-to-up {
  text-align: center;
  display: none;
  position: fixed;
  bottom: 20px;
  right: 30px;
  z-index: 99;
  background-color: #66D7D1;
  color: white;
  cursor: pointer;
  height: 42px;
  width: 42px;
  line-height: 42px;
  border-radius: 50%;
  display: grid;
  box-shadow: 0 0 1.875rem rgba(0, 0, 0, .2);
  animation: fadeIn .2s forwards;
}

.go-to-up:hover {
  background-color: #5dcec8;
}

.media-responsive {
  width: 100%;
  height: auto;
}

/* Top Header */

.top-header,
.top-header__details,
.main-nav__list,
.service__list,
.why-us__list,
.testimonial__item {
  list-style-type: none;
}

.top-header {
  background: #30b8b1;
  color: #fff;
  padding: .625rem 0;
  font-size: .875rem;
}

.top-header__inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.top-header__social-media__item {
  display: inline-block;
}

.top-header__social-media__item:not(:first-child) {
  margin-left: .625rem;
}

.top-header__details__item {
  display: flex;
  align-items: center;
}

.top-header__details__item i {
  margin-right: 4px;
}

.top-header__details__item:not(:first-child) {
  margin-left: .625rem;
}

/* Main Header & Main Navbar */
.main-header {
  transition-property: top, background, box-shadow;
  transition-duration: .4s;
}

.main-header.sticky {
  position: fixed;
  z-index: 9999;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 0 1.25rem rgba(0, 0, 0, .2);
  /* animation: fadeInFromTop .2s forwards; */
}

.main-header__inner {
  display: flex;
  align-items: center;
  justify-content: space-between; 
}

.main-header__brand img {
  width: 62px;
}

.main-nav__toggle {
  display: none;
}

.main-nav__item {
  position: relative;
  display: inline-block;
  transition: opacity .2s;
}

.main-nav__item a {
  display: block;
  padding: 1.5625rem .875rem;
  font-weight: 700;
  text-transform: capitalize;
  transition: color .2s ease .2s;
}

.main-nav__item a:hover {
  opacity: 1;
  color: #061616;
}

.main-nav__item::after {
  content: '';
  height: 3px;
  width: 0;
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  background: #66D7D1;
  transition: width .4s;
}

.main-nav__item:hover::after {
  width: 100%
}

.main-nav__item.active {
  color: #061616;
}

/* Hero */
.hero {
  height: calc(100vh - 104px);
  display: grid;
  place-items: center;
  background: url('./../images/hero-helloquence-61189-unsplash.png') center/cover no-repeat;
  /* background-attachment: fixed; */
}

.hero__body {
  text-align: center;
  color: #fff;
}

.hero__title {
  color: inherit;
  font-size: 3.875rem;
  margin: 0 auto .9375rem;
}

.hero__subtitle {
  font-size: 1.25rem;
  width: 60%;
  margin: 0 auto 3.75rem;
}

.scroll-down {
  display: block;
  font-size: 24px;
  width: 24px;
  height: 24px;
  margin-right: auto;
  margin-left: auto;
  animation: upAndDown .8s infinite  alternate linear;
}

