/* About Us */

.d-block {
  display: block;
}

.about-us a {
  color: #30b8b1;
}

.about-us__title {
  text-align: left;
}

.about-us__columns {
  display: grid;
  grid-template-columns: 50% 46%;
  grid-column-gap: 4%;
}

/* Service */

.service {
  text-align: center;
}

.section__subtitle {
  width: 70%;
  margin-right: auto;
  margin-left: auto;
  text-align: center;
}

.service__list {
  margin-top: 5rem;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 1.875rem;
}

.service__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  /* margin-bottom: .9375rem; */
  margin-bottom: 1.25rem;
  margin-left: auto;
  margin-right: auto;
  color: #fafefe;;
  background: #66D7D1;
  width: 62px;
  height: 62px;
  border-radius: 50%;
  padding: .625rem;
}

.service__desc {
  margin-top: .625rem;
}

/* Why US */
.why-us__columns {
  margin-top: 5rem;
  display: grid;
  grid-template-columns: 46% 50%;
  grid-column-gap: 4%;
}

.why-us__list {
  margin-top: 1.875rem;
  display: grid;
  grid-template-columns: 1fr;
  grid-gap: 2rem;
}

.why-us__item {
  display: grid;
  grid-template-columns: 64px 1fr;
  grid-gap: 1.25rem;
}

.why-us__icon {
  justify-self: center;
  font-size: 2rem;
  width: 62px;
  height: 62px;
  background: #66D7D1;
  border-radius: 50%;
  color: #fff;
  display: grid;
  place-items: center;
}

.why-us__body {
  grid-column: 2;
}

.why-us__title {
  margin-bottom: .3125rem;
}

/* Testimonial */

.testimonial__list {
  margin-top: 5rem;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 2.5rem;
  align-items: start;
}

.testimonial__item {
  padding: .9375rem;
  border-radius: 5px;
  background: #fafefe;
  /* border: 1px solid #ecfbfb; */
}

.testimonial__item__body {
  display: flex;
  align-items: center;
  margin-top: 1.25rem;
}

.testimonial__item__image {
  border-radius: 50%;
  height: 32px !important;
  width: 32px !important;
}

.testimonial__item__name {
  margin-left: .625rem;
  color: #30b8b1;
  font-weight: 700;
  letter-spacing: .67px;
}


@keyframes upAndDown {
  0% { transform: translateY(0); }
  100% { transform: translateY(-10px); }
}

@keyframes fadeInFromTop {
  0% {
    opacity: 0;
    transform: translateY(-68px);
  }

  67% {
    opacity: .4;
  }

  84% {
    opacity: .8;
  }

  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes fadeIn {
  from { opactiy: 0; }
  to { opactiy: 1; }
}